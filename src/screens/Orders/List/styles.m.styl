@import '../../../common.styl'

.screenWrapper
  display border-box
  background white
  padding-right 5vw

.screen
  background white
  height 100%
  width 100%
  padding-left 5vw
  padding-top 2.5vw

.table
  border black solid 0.1vw
  border-radius 5px
  padding-inline 1vw

.row
  display grid
  grid-template-columns 1fr 5fr 6fr 3fr 4fr
  grid-column-gap 2vw

.body
  display block

.pagination
  display flex
  align-items center
  justify-content flex-end
  padding-top 0.5vw
  
  button
    margin-left 0.5vw
